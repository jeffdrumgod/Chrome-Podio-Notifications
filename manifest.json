{
  "name": "Chrome Podio Notifications - Beta",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Show Podio notifications - Beta",
  "homepage_url": "https://github.com/jeffdrumgod/Chrome-Podio-Notifications",
  "icons": {
    "16": "icons/podio_16.png",
    "48": "icons/podio_48.png",
    "128": "icons/podio_128.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/podio_128.png",
    "default_title": "Podio Notifications",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "options_page": "src/options/options.html",
  "permissions": [
    "tabs",
    "notifications",
    "*://*.podio.com/*"
  ]
}